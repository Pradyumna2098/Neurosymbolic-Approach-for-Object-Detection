# FastAPI Backend Configuration
# Copy this file to .env and adjust values as needed

# Application Settings
APP_NAME="Neurosymbolic Object Detection API"
APP_VERSION="1.0.0"
DEBUG=false

# Server Settings
HOST=0.0.0.0
PORT=8000

# CORS Settings (comma-separated list)
# For development, allows localhost and file:// protocol for Electron
CORS_ORIGINS=http://localhost:*,http://127.0.0.1:*,file://*

# Local Storage Paths (relative to project root)
DATA_ROOT=data
UPLOADS_DIR=data/uploads
JOBS_DIR=data/jobs
RESULTS_DIR=data/results
VISUALIZATIONS_DIR=data/visualizations

# File Upload Settings
MAX_UPLOAD_SIZE=10485760  # 10 MB in bytes
# Allowed file extensions (comma-separated)
ALLOWED_EXTENSIONS=.jpg,.jpeg,.png,.bmp,.tiff

# API Settings
API_V1_PREFIX=/api/v1
