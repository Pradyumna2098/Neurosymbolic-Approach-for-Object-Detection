# FastAPI Backend Configuration
# Copy this file to .env and adjust values as needed

# Application Settings
APP_NAME="Neurosymbolic Object Detection API"
APP_VERSION="1.0.0"
DEBUG=false

# Server Settings
HOST=0.0.0.0
PORT=8000

# CORS Settings
# For development, list explicit origins with common ports
# FastAPI's CORSMiddleware does not support wildcard ports (http://localhost:*)
# Override via CORS_ORIGINS environment variable for production
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://localhost:5173,http://127.0.0.1:3000,http://127.0.0.1:8080

# CORS regex pattern for flexible origin matching (supports Electron file:// protocol)
CORS_ALLOW_ORIGIN_REGEX=^(file://.*|http://localhost:\d+|http://127\.0\.0\.1:\d+)$

# Local Storage Paths (relative to project root)
DATA_ROOT=data
UPLOADS_DIR=data/uploads
JOBS_DIR=data/jobs
RESULTS_DIR=data/results
VISUALIZATIONS_DIR=data/visualizations

# File Upload Settings
MAX_UPLOAD_SIZE=10485760  # 10 MB in bytes
# Allowed file extensions (comma-separated)
ALLOWED_EXTENSIONS=.jpg,.jpeg,.png,.bmp,.tiff

# API Settings
API_V1_PREFIX=/api/v1
